<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_search_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_song_activity_song_title"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cell_search_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_song_activity_song_artist"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cell_search_song_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_song_activity_song_album"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>